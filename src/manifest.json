{
	"name": "Notifier for GitHub",
	"version": "3.0.5",
	"description": "Displays your GitHub notifications unread count",
	"homepage_url": "https://github.com/sindresorhus/notifier-for-github",
	"manifest_version": 2,
	"minimum_chrome_version": "67",
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"alarms",
		"storage"
	],
	"optional_permissions": [
		"tabs",
		"notifications"
	],
	"background": {
		"persistent": false,
		"scripts": [
			"browser-polyfill.min.js",
			"background.js"
		]
	},
	"browser_action": {
		"default_icon": "icon-toolbar.png"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}
